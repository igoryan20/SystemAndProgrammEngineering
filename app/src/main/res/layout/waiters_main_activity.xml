<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/waiters_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/img_table1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1 cliet"
                android:src="@drawable/waiting"
                android:layout_below="@id/tv_number1"
            />

            <TextView
                android:id="@+id/tv_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="№1"
                android:textColor="#fff"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/img_table2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1 cliet"
                android:src="@drawable/cooking"
                android:layout_below="@id/tv_number2"
                />

            <TextView
                android:id="@+id/tv_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="№2"
                android:textColor="#fff"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/img_table3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1 cliet"
                android:src="@drawable/ready"
                android:layout_below="@id/tv_number3"
                />

            <TextView
                android:id="@+id/tv_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="№3"
                android:textColor="#fff"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>